<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/asset_produk1" />

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="0dp"
                android:backgroundTint="#E1A902"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_minus15sdp"
                app:cardCornerRadius="@dimen/_11ssp">

                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terlaris"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hp Oppp Reno A12" />

                <TextView
                    android:id="@+id/tvHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:text="Rp. 10.000" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lyDiskon"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/pinkSoftSecondary">

                        <TextView
                            android:id="@+id/tvDiskon"
                            android:layout_marginVertical="@dimen/_3sdp"
                            android:layout_marginHorizontal="@dimen/_3sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/pinkSoft" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvHargaAsli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Rp.10.000"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ro. 10.000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/lyGrosir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/greenSoftSecondary">

                    <TextView
                        android:layout_marginVertical="@dimen/_3sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grosir"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/greenSoft" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvPengiriman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:layout_marginHorizontal="@dimen/_3sdp"
                    android:textSize="@dimen/_9sdp"
                    android:text="Jakarta Pusat" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        app:tint="#FFC107"
                        android:src="@drawable/ic_star" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_9sdp"
                        android:text="5.0 | Terjual 1.1K" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
